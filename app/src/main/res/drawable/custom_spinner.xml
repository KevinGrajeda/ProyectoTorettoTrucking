<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">

                    <corners android:topRightRadius="3dp" android:topLeftRadius="3dp"/>
                    <solid android:color="@color/lightGrisToretto"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_arrow_drop_down_24" android:gravity="center_vertical|right"/>

            <item android:top="-6dp" android:right="-13dp" android:left="-3dp" android:bottom="-1dp">
                <shape>

                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/naranjaToretto" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>